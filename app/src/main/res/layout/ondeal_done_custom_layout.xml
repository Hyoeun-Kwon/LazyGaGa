<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_done"
    app:cardBackgroundColor="@color/yellow"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/myhaezzoListDone_ivDimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_weight="2"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:id="@+id/myhaezzoListDone_tvDproduct"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="소파 조립"
                    android:textColor="@color/brown"
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:id="@+id/myhaezzoListDone_tvDdate"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="날짜"
                    android:textColor="@color/whitegray"
                    />

                <TextView
                    android:id="@+id/myhaezzoListDone_tvDplace"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="장소"
                    android:textColor="@color/whitegray"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:id="@+id/myhaezzoListDone_tvDstatus"
                    android:layout_height="wrap_content"
                    android:layout_width="0px"
                    android:layout_weight="0.5"
                    android:text="대기완료"
                    android:background="@color/brown"
                    android:textColor="@color/whitegray"
                    android:padding="5dp"
                    android:gravity="center"
                     />

                <TextView
                    android:id="@+id/myhaezzoListDone_tvDmoney"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="금액"
                    android:textColor="@color/brown"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
